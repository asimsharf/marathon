<!-- res/layout/custom_notification_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Runner's name -->
    <TextView
        android:id="@+id/runner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Runner: John Doe"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Current position -->
    <TextView
        android:id="@+id/runner_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position: 5.0 km"
        android:textSize="14sp"
        android:textColor="#555555" />

    <!-- Estimated finish time -->
    <TextView
        android:id="@+id/runner_finish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Finish: 12:45 PM"
        android:textSize="14sp"
        android:textColor="#555555" />
</LinearLayout>
